<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <Button
            android:text="Run FirstWorker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/firstWorkerButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.467" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Run SecondWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondWorkerButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/firstWorkerButton"/>
    <Button
            android:text="Run Worker Chain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runAllButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/secondWorkerButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>